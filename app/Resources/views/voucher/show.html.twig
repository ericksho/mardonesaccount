{% extends 'base.html.twig' %}

{% block body %}
    <h1>Voucher</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voucher.id }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ voucher.state }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ voucher.type }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ voucher.number }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if voucher.date %}{{ voucher.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voucher_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('voucher_edit', { 'id': voucher.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
