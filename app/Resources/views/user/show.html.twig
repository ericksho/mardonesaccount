{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ user.getFullName }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Rut</th>
                <td>{{ user.rut }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    
    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary btn2" role="button">Editar</a>

{% endblock %}
